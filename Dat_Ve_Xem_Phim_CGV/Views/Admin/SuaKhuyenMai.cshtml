@model Dat_Ve_Xem_Phim_CGV.Models.KHUYENMAI

@{
    ViewBag.Title = "SuaKhuyenMai";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto bg-gray-800 p-8 rounded-xl shadow-2xl border border-gray-700">

    <h2 class="text-2xl font-bold mb-8 text-white border-b border-gray-700 pb-4 flex items-center gap-3">
        <i class="fas fa-edit text-blue-500"></i>
        Cập Nhật Khuyến Mãi
    </h2>

    @using (Html.BeginForm("SuaKhuyenMai", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MAKM)

        <div class="space-y-6">
            <div>
                <label class="block text-gray-400 text-sm font-bold mb-2">
                    Mã Khuyến Mãi (Không thể sửa)
                </label>
                <input type="text"
                       value="@Model.MAKM"
                       class="w-full bg-gray-700/50 text-gray-400 p-3 rounded-lg border border-gray-600 cursor-not-allowed font-mono"
                       readonly />
            </div>
            <div>
                <label class="block text-gray-300 text-sm font-bold mb-2">
                    Tên Khuyến Mãi <span class="text-red-500">*</span>
                </label>
                @Html.TextBoxFor(m => m.TENKM, new
                {
                    @class = "w-full bg-gray-900 text-white p-3 rounded-lg border border-gray-600 focus:border-blue-500 outline-none",
                    required = "required"
                })
                @Html.ValidationMessageFor(m => m.TENKM, "", new { @class = "text-red-400 text-xs mt-1" })
            </div>
            <div>
                <label class="block text-gray-300 text-sm font-bold mb-2">
                    Loại Khuyến Mãi
                </label>
                <select name="LOAIKM"
                        class="w-full bg-gray-900 text-white p-3 rounded-lg border border-gray-600 focus:border-blue-500 outline-none">

                    <option value="Thẻ thành viên" @(Model.LOAIKM == "Thẻ thành viên" ? "selected" : "")>
                        Thẻ thành viên
                    </option>
                    <option value="Combo" @(Model.LOAIKM == "Combo" ? "selected" : "")>
                        Combo
                    </option>
                    <option value="Thời gian" @(Model.LOAIKM == "Thời gian" ? "selected" : "")>
                        Thời gian
                    </option>
                    <option value="Sự kiện" @(Model.LOAIKM == "Sự kiện" ? "selected" : "")>
                        Sự kiện
                    </option>
                    <option value="Đối tượng" @(Model.LOAIKM == "Đối tượng" ? "selected" : "")>
                        Đối tượng
                    </option>

                    <option value="Thanh toán" @(Model.LOAIKM == "Thanh toán" ? "selected" : "")>
                        Thanh toán
                    </option>
                    <option value="Phim Việt" @(Model.LOAIKM == "Phim Việt" ? "selected" : "")>
                        Phim Việt
                    </option>
                </select>
            </div>
            <div class="grid grid-cols-2 gap-6">

                <div>
                    <label class="block text-gray-300 text-sm font-bold mb-2">
                        Ngày Bắt Đầu
                    </label>
                    <input type="date"
                           name="NGAYBD"
                           value="@(Model.NGAYBD.HasValue ? Model.NGAYBD.Value.ToString("yyyy-MM-dd") : "")"
                           class="w-full bg-gray-900 text-white p-3 rounded-lg border border-gray-600 focus:border-blue-500 outline-none [color-scheme:dark]"
                           required />
                    @Html.ValidationMessageFor(m => m.NGAYBD, "", new { @class = "text-red-400 text-xs mt-1" })
                </div>
                <div>
                    <label class="block text-gray-300 text-sm font-bold mb-2">
                        Ngày Kết Thúc
                    </label>
                    <input type="date"
                           name="NGAYKT"
                           value="@(Model.NGAYKT.HasValue ? Model.NGAYKT.Value.ToString("yyyy-MM-dd") : "")"
                           class="w-full bg-gray-900 text-white p-3 rounded-lg border border-gray-600 focus:border-blue-500 outline-none [color-scheme:dark]"
                           required />
                    @Html.ValidationMessageFor(m => m.NGAYKT, "", new { @class = "text-red-400 text-xs mt-1" })
                </div>

            </div>
            <div>
                <label class="block text-gray-300 text-sm font-bold mb-2">
                    Điều Kiện Áp Dụng <span class="text-red-500">*</span>
                </label>
                @Html.TextAreaFor(m => m.DIEUKIEN, new
                {
                    @class = "w-full bg-gray-900 text-white p-3 rounded-lg border border-gray-600 focus:border-blue-500 outline-none",
                    rows = "4",
                    required = "required"
                })
                @Html.ValidationMessageFor(m => m.DIEUKIEN, "", new { @class = "text-red-400 text-xs mt-1" })
            </div>

        </div>
        <div class="flex justify-end gap-4 mt-8 pt-4 border-t border-gray-700">

            <a href="@Url.Action("QuanLyKhuyenMai", "Admin")"
               class="px-6 py-2.5 rounded-lg bg-gray-700 text-gray-300 hover:bg-gray-600 hover:text-white font-semibold transition-colors">
                Hủy bỏ
            </a>

            <button type="submit"
                    class="px-6 py-2.5 rounded-lg bg-blue-600 text-white hover:bg-blue-500 font-bold shadow-lg transition-all transform hover:-translate-y-0.5">
                <i class="fas fa-check mr-2"></i>
                Cập nhật
            </button>

        </div>
    }
</div>
