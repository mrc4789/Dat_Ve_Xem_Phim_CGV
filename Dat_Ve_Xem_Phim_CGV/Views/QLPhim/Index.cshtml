@model IEnumerable<Dat_Ve_Xem_Phim_CGV.Models.PHIM>

@{
    ViewBag.Title = "Index";
}


<!-- Banner Slideshow -->
<div class="container my-4">
    <div class="ratio ratio-21x9 rounded overflow-hidden">
        <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/r/o/rolling-banner_1_-min.png" alt="Movie Banner" class="img-fluid object-fit-cover">
    </div>
</div>

<!-- Movie Selection -->
<div class="container my-5">
    <div class="text-center mb-5">
        <h2 class="text-uppercase text-cgv-red fw-bold fs-1 position-relative d-inline-block pb-3 section-title">
            Movie Selection
        </h2>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-6 col-md-4 col-lg-2">
                <div class="card h-100 border-0 shadow-sm hover-shadow">
                    <div class="position-relative">
                        <span class="badge bg-cgv-red position-absolute top-0 start-0 m-2 fs-6 fw-semibold">@item.DOTUOI</span>
                        <a href="@Url.Action("Details", "QLPhim", new {id = item.MAPHIM})"><img src="~/Content/Img/@item.POSTER" class="card-img-top" alt="@item.TENPHIM" style="height: 280px; object-fit: cover; border-radius: 12px 12px 0 0;"></a>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title small mb-3" style="height: 48px; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                            @item.TENPHIM
                        </h5>
                        <a href="@Url.Action("Index", "MuaVe", new { maPhim = item.MAPHIM })" class="btn btn-cgv-red w-100 mt-auto fw-semibold">Mua vé</a>
                    </div>
                </div>
            </div>
        }

        <!-- Event Section -->
        <div class="container my-5">
            <div class="text-center mb-5">
                <h2 class="text-uppercase text-cgv-red fw-bold fs-1 position-relative d-inline-block pb-3 section-title">
                    Event
                </h2>
            </div>

            <ul class="nav nav-tabs border-bottom mb-4" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active fw-semibold text-dark border-0"
                            data-bs-toggle="tab" data-bs-target="#member">
                        Thành Viên CGV
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link fw-semibold text-dark border-0"
                            data-bs-toggle="tab" data-bs-target="#promo">
                        Tin Mới & Ưu Đãi
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="member">
                    <div class="row g-4">
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/2/4/240x201_14_.png"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/2/4/240x201_11_79.jpg"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/2/4/240x201_6_.png"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/2/4/240x201_2_.jpg"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="promo">
                    <div class="row g-4">
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/c/g/cgv_-_ncb_2025_banner_app_copy_240x201_1.png"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/2/4/240x201_7__1.png"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/n/a/napas_240x201_9__1.png"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <div class="card border-0 shadow-sm hover-shadow">
                                <img src="https://www.cgv.vn/media/banner/cache/1/b58515f018eb873dafa430b6f9ae0c1e/2/4/240x201_8_gapthu.jpg"
                                     class="card-img-top" alt="Event" style="height: 180px; object-fit: cover;">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


