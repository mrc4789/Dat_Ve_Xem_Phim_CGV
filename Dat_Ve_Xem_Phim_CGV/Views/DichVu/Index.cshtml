@model IEnumerable<Dat_Ve_Xem_Phim_CGV.Models.DICHVU>
@{
    ViewBag.Title = "Combo & Bắp Nước";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    .menu-section {
        padding: 40px 0;
        background-color: #fdfcf0;
        font-family: 'Arial', sans-serif;
    }

    /* Tận dụng lại style tiêu đề của CGV */
    .cgv-title {
        text-align: center;
        margin-bottom: 40px;
        position: relative;
    }

        .cgv-title h2 {
            display: inline-block;
            background: #fdfcf0;
            padding: 0 20px;
            position: relative;
            z-index: 2;
            font-weight: 900;
            font-size: 35px;
            text-transform: uppercase;
            color: #222;
            text-shadow: 3px 3px 0px #ddd;
            border-bottom: 3px double #444;
        }

        .cgv-title::before {
            content: "";
            position: absolute;
            top: 50%;
            left: 0;
            width: 100%;
            height: 2px;
            background: #444;
            z-index: 1;
        }

    /* Card sản phẩm */
    .menu-card {
        background: #fff;
        margin-bottom: 30px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        transition: 0.3s;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }

        .menu-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        }

    .menu-img-box {
        width: 100%;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
        border-bottom: 1px dashed #ddd;
    }

    .menu-img {
        max-width: 80%;
        max-height: 80%;
        object-fit: contain;
    }

    .menu-info {
        padding: 15px;
        text-align: center;
    }

    .menu-name {
        font-weight: bold;
        font-size: 16px;
        color: #333;
        margin-bottom: 5px;
        height: 40px;
        overflow: hidden;
    }

    .menu-desc {
        font-size: 13px;
        color: #777;
        margin-bottom: 10px;
        height: 35px;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .menu-price {
        color: #e71a0f;
        font-weight: 900;
        font-size: 18px;
        background: #fdfcf0;
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        border: 1px solid #e71a0f;
    }
</style>

<div class="menu-section">
    <div class="container">
        <div class="cgv-title">
            <h2>Combo & Bắp Nước</h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                // === LOGIC CHỌN HÌNH ===
                string imgFileName = "combo.jpg";
                string ten = (item.TENDV ?? "").ToLower();

                if (ten.Contains("bắp")) { imgFileName = "bap.jpg"; }
                else if (ten.Contains("nước") || ten.Contains("coca") || ten.Contains("pepsi")) { imgFileName = "nuoc.jpg"; }
                // =========================================

                <div class="col-md-3 col-sm-6">
                    <div class="menu-card">
                        <div class="menu-img-box">
                            <img src="@Url.Content("~/Imgs/" + imgFileName)" class="menu-img" alt="@item.TENDV" />
                        </div>
                        <div class="menu-info">
                            <div class="menu-name">@item.TENDV</div>
                            <div class="menu-desc">@item.MOTA</div>
                            <div class="menu-price">@string.Format("{0:N0}", item.GIADV) đ</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>