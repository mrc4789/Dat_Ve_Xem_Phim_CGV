@model Dat_Ve_Xem_Phim_CGV.Models.PHIM
@{
    ViewBag.Title = "Thêm phim mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState["POSTER"] != null)
{
    <p class="text-rose-500 text-xs mt-1">@ViewData.ModelState["POSTER"].Errors[0].ErrorMessage</p>
}
<div class="max-w-4xl mx-auto p-6">
    <div class="flex items-center gap-4 mb-8">
        <a href="@Url.Action("QuanLyPhim")" class="p-2 rounded-full hover:bg-surface-highlight text-slate-400 hover:text-white transition-all">
            <span class="material-symbols-outlined">arrow_back</span>
        </a>
        <div>
            <h1 class="text-2xl font-bold text-white tracking-tight">Thêm phim mới</h1>
            <p class="text-slate-400 text-sm">Điền thông tin chi tiết để cập nhật phim vào hệ thống</p>
        </div>
    </div>

    @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "space-y-6" }))
    {
        @Html.AntiForgeryToken()

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            <div class="lg:col-span-1">
                <div class="bg-surface-dark/50 border border-surface-highlight rounded-2xl p-6 sticky top-6 text-center">
                    <label class="block text-slate-300 font-semibold mb-4 text-left">Poster phim</label>

                    <div id="poster-preview-container" class="relative group cursor-pointer mb-4 aspect-[2/3] rounded-xl overflow-hidden border-2 border-dashed border-surface-highlight hover:border-primary transition-all flex flex-col items-center justify-center bg-surface-highlight/20">
                        <img id="poster-preview" src="#" alt="Preview" class="hidden absolute inset-0 w-full h-full object-cover z-0" />

                        <div id="upload-placeholder" class="z-10 text-slate-500 group-hover:text-primary transition-colors">
                            <span class="material-symbols-outlined text-5xl mb-2">add_photo_alternate</span>
                            <p class="text-xs px-4">Click hoặc kéo thả file để tải ảnh lên</p>
                        </div>

                        <input type="file" name="posterFile" id="poster-input" class="absolute inset-0 opacity-0 cursor-pointer z-20" accept="Img/*" />
                    </div>
                    <p class="text-[10px] text-slate-500 italic">Hỗ trợ: JPG, PNG, WEBP (Tỷ lệ chuẩn 2:3)</p>
                </div>
            </div>

            <div class="lg:col-span-2">
                <div class="bg-surface-dark/50 border border-surface-highlight rounded-2xl p-8 space-y-6 shadow-2xl">

                    <div>
                        <label class="block text-sm font-medium text-slate-400 mb-2">Tên bộ phim</label>
                        @Html.TextBoxFor(m => m.TENPHIM, new { @class = "w-full bg-surface-highlight/50 border border-surface-highlight rounded-xl px-4 py-3 text-white focus:border-primary outline-none" })
                        @Html.ValidationMessageFor(m => m.TENPHIM, "", new { @class = "text-rose-500 text-xs mt-1" })
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Thể loại</label>
                            @Html.TextBoxFor(m => m.THELOAI, new { @class = "w-full bg-surface-highlight/50 border border-surface-highlight rounded-xl px-4 py-3 text-white focus:border-primary focus:ring-1 focus:ring-primary outline-none transition-all", placeholder = "Hành động, Phiêu lưu..." })
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Trạng thái chiếu</label>
                            @Html.DropDownListFor(m => m.TRANGTHAI,
                                new SelectList(new[] { "Sắp chiếu", "Đang chiếu", "Ngưng chiếu" }, "Sắp chiếu"),@* Để "Sắp chiếu" làm mặc định *@
                                new { @class = "w-full bg-surface-highlight/50 border border-surface-highlight rounded-xl px-4 py-3 text-white focus:border-primary outline-none appearance-none cursor-pointer" })
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Thời lượng (phút)</label>
                            <div class="relative">
                                @Html.TextBoxFor(m => m.THOILUONG, new { @class = "w-full bg-surface-highlight/50 border border-surface-highlight rounded-xl pl-4 pr-12 py-3 text-white focus:border-primary outline-none transition-all", type = "number" })
                                <span class="absolute right-4 top-3.5 text-slate-500 text-xs font-bold uppercase">Min</span>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-400 mb-2">Ngày khởi chiếu</label>
                            @Html.TextBoxFor(m => m.NGAYPH, "{0:yyyy-MM-dd}", new
                            {
                                @class = "w-full bg-surface-highlight/50 border border-surface-highlight rounded-xl px-4 py-3 text-white focus:border-primary outline-none transition-all",
                                type = "date",
                                id = "txtNgayPH"
                            })
                            @Html.ValidationMessageFor(m => m.NGAYPH, "", new { @class = "text-rose-500 text-xs mt-1" })
                        </div>
                    </div>

                    <div class="flex items-center justify-end gap-4 pt-4 border-t border-surface-highlight">
                        <a href="@Url.Action("QuanLyPhim")" class="px-6 py-3 rounded-xl text-slate-400 hover:text-white hover:bg-surface-highlight transition-all font-medium">
                            Hủy bỏ
                        </a>
                        <button type="submit" class="bg-primary hover:bg-primary-hover text-white px-8 py-3 rounded-xl font-bold shadow-lg shadow-primary/20 transition-all flex items-center gap-2">
                            <span class="material-symbols-outlined">save</span>
                            Lưu thông tin
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.getElementById('poster-input').onchange = evt => {
        const [file] = document.getElementById('poster-input').files;
        if (file) {
            const preview = document.getElementById('poster-preview');
            const placeholder = document.getElementById('upload-placeholder');
            preview.src = URL.createObjectURL(file);
            preview.classList.remove('hidden');
            placeholder.classList.add('opacity-0');
        }
    }
</script>

<style>
    /* Tuỳ chỉnh màu cho Input Date */
    ::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
    }

    /* Chrome, Safari, Edge, Opera - Ẩn mũi tên input number */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
</style>