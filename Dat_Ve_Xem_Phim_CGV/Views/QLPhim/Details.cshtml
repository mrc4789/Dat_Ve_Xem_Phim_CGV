@model Dat_Ve_Xem_Phim_CGV.Models.PHIM

@{
    ViewBag.Title = "Details";
}

<!-- BANNER -->
<section class="movie-banner" style="background-image: url('/Img/backgroundfordetails.jpg');">
    <div class="container position-relative" style="z-index:2; padding-top:140px;">
        <div class="row align-items-end">
            <div class="col-md-3 text-center">
                <img src="/Img/@Model.POSTER" class="movie-poster" alt="Poster phim">
            </div>
            <div class="col-md-9 text-white">
                <h1 class="fw-bold">@Model.TENPHIM</h1>
                <span class="badge badge-age">C13</span>
                <p class="mt-3 mb-1">Thể loại: @Model.THELOAI</p>
                <p class="mb-1">Thời lượng: @Model.THOILUONG phút</p>
                <p class="mb-3">Khởi chiếu: @Model.NGAYPH</p>
                <a href="#lichchieu" class="btn btn-danger btn-lg">🎟️ Mua vé</a>
            </div>
        </div>
    </div>
</section>

<!-- CONTENT -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-8">
            <h3>Nội dung phim</h3>
            <p class="text-secondary">
                @Model.MOTA
            </p>

            <h3 class="mt-4">Trailer</h3>
            <div class="ratio ratio-16x9">
                <iframe src="https://www.youtube.com/embed/TcMBFSGVi1c" allowfullscreen></iframe>
            </div>
        </div>

        <!-- INFO -->
        <div class="col-md-4">
            <h4>Thông tin</h4>
            <ul class="list-group list-group-flush bg-dark">
                <li class="list-group-item bg-dark text-white">Nhà sản xuất: @Model.NHASANXUAT</li>
                <li class="list-group-item bg-dark text-white">Diễn viên: @Model.DIENVIEN</li>
                <li class="list-group-item bg-dark text-white">Ngôn ngữ: @Model.NGONNGU</li>
            </ul>
        </div>
    </div>

